{
  "appdir": "{{appdir}}",

  "server": {
    "ipAddress": "127.0.0.1",
    "tcpPort": 8080,
    "http": {
      "path": "/api/"
    },
    "websocket": {
      "path": "/websocket/"
    },
    "files": {
      "path": "/web/",
      "rootDirectory": "{{appdir}}/web",
      "dirListingEnabled": true
    },
    "rootRedirectLocation": "/web/index.html"
  },

  "web": {
    "webSocketUrl": "ws://127.0.0.1:8080/websocket/"
  },

  "logging": {
    "console": {
      "level": "INFO"
    },
    "file": {
      "level": "DEBUG",
      "maxBytes": 1048576,
      "maxBackupCount": 16,
      "filename": "{{appdir}}/log/example.log",
      "mode": "a",
      "dateFormat": "YYYY-MM-DD HH:mm:ss.SSS"
    }
  },

  "winscm": {
    "name": "example",
    "pluginPath": "{{appdir}}/bin/windows_scm_plugin_1.0.0.dll"
  }
}
